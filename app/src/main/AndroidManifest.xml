<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.madless.lingowl" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ui.app.LingowlApp">
        <activity
            android:name=".ui.activity.MainActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            android:theme="@style/NavActivityTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.CreateNewWordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.CategoriesPickerActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
